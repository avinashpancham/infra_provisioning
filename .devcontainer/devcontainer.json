{
	"name": "Python 3",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"settings": { 
		"terminal.integrated.shell.linux": "/bin/bash",
		"python.pythonPath": "/usr/local/bin/python",
	},

	"extensions": [
		"4ops.terraform",
		"eamodio.gitlens",
		"GitHub.vscode-pull-request-github",
		"ms-azuretools.vscode-docker",
		"ms-python.python",
		"VisualStudioExptTeam.vscodeintellicode",
		"yzhang.markdown-all-in-one",
	],
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.vscode/extensions,target=/home/vscode/.vscode-server/extensions,type=bind,consistency=cached",
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	],
	"postCreateCommand": "pre-commit install && pre-commit install-hooks",
	"remoteEnv": {
		"ANSIBLE_CONFIG": "/workspaces/ansible_examples/ansible.cfg",
		"VISUAL": "vim.tiny",
		"EDITOR": "${remoteEnv:VISUAL}",

	},
	"remoteUser": "vscode",
	"runArgs": ["--init"],
	"overrideCommand": false
}